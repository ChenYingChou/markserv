{
  "name": "markserv",
  "version": "0.2.0",
  "description": "markserv serves Markdown files as GitHub style HTML and LiveReloads your files in the browser as you edit.",
  "preferGlobal": true,
  "keywords": [
    "markdown",
    "livereload",
    "server",
    "github"
  ],
  "scripts": {
    "test": "xo && ava"
  },
  "bin": {
    "markserv": "cli.js"
  },
  "files": [
    "server.js",
    "cli.js",
    "less/github.less",
    "less/custom.less"
  ],
  "author": "Alistair MacDonald <al@pwn.io>",
  "email": "al@pwn.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/f1lt3r/markserv.git"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "commander": "^2.5.1",
    "commonmark": "^0.28.1",
    "connect": "^3.6.5",
    "connect-livereload": "^0.6.0",
    "jsdom": "^9.9.1",
    "less": "^2.7.2",
    "livereload": "^0.7.0",
    "micromatch": "^3.1.3",
    "mime": "^1.4.1",
    "open": "0.0.5",
    "openport": "0.0.4",
    "pretty": "^2.0.0",
    "send": "^0.16.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "chalk": "^2.4.0",
    "husky": "^0.14.3",
    "xo": "^0.20.3"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "rules": {
      "space-before-function-paren": 0
    }
  }
}
