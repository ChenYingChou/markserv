{
  "name": "markserv",
  "version": "0.4.0",
  "description": "markserv serves Markdown files as GitHub style HTML and LiveReloads your files in the browser as you edit.",
  "preferGlobal": true,
  "scripts": {
    "test": "xo && npm run cover",
    "cover": "nyc --reporter=lcov --reporter=html --reporter=text ava **/*.test.js",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls -v"
  },
  "keywords": [
    "markdown",
    "livereload",
    "server",
    "github",
    "realtime",
    "highlighting",
    "code",
    "syntax highlighting",
    "links",
    "markdown-it"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "bin": {
    "markserv": "cli.js"
  },
  "files": [
    "server.js",
    "cli.js",
    "less/github.less",
    "less/custom.less"
  ],
  "author": "Alistair MacDonald <al@pwn.io>",
  "email": "al@pwn.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/f1lt3r/markserv.git"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "chalk": "^2.4.0",
    "commander": "^2.5.1",
    "connect": "^3.6.5",
    "connect-livereload": "^0.6.0",
    "deepmerge": "^2.1.0",
    "handlebars": "^4.0.11",
    "implant": "^2.0.0",
    "less": "^2.7.2",
    "livereload": "^0.7.0",
    "markdown-it": "^8.4.1",
    "markdown-it-anchor": "^4.0.0",
    "markdown-it-checkbox": "^1.1.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-front-matter": "^0.1.2",
    "markdown-it-highlightjs": "^3.0.0",
    "markdown-it-include": "^1.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "micromatch": "^3.1.3",
    "mime": "^1.4.1",
    "open": "0.0.5",
    "send": "^0.16.0",
    "term-img": "^2.1.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^3.0.0",
    "get-port": "^3.2.0",
    "husky": "^0.14.3",
    "nyc": "^11.7.1",
    "request": "^2.85.0",
    "xo": "^0.20.3"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "rules": {
      "no-console": 1,
      "space-before-function-paren": 0,
      "unicorn/escape-case": 0
    }
  },
  "ava": {
    "failfast": true
  }
}
