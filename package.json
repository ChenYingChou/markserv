  },
  "dependencies": {
    "ansi": "^0.3.0",
    "bluebird": "^3.4.7",
    "commander": "^2.5.1",
    "commonmark": "^0.28.1",
    "connect": "^3.6.5",
    "connect-livereload": "^0.6.0",
    "jsdom": "^9.9.1",
